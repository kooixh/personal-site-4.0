{
  "extends": [
    "react-app",
    "airbnb",
    "plugin:jsx-a11y/recommended",
    "prettier",
    "prettier/react"
  ],
  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  },
  "globals": {
    "flushPromises": true
  },
  "plugins": [
    "jsx-a11y",
    "prettier"
  ],
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true
      }
    ],
    "max-len": [
      "error",
      120
    ],
    "no-use-before-define": [
      "error",
      "nofunc"
    ],
    "import/no-unresolved": "off",
    "prettier/prettier": "error",
    "react/jsx-filename-extension": [
      "error",
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "react/jsx-props-no-spreading": [
      "off"
    ],
    "import/prefer-default-export": [
      "off"
    ]
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          [
            "@app",
            "./src"
          ],
          [
            "@config",
            "./config"
          ],
          [
            "@root",
            "./server"
          ],
          [
            "@api",
            "./server/api"
          ],
          [
            "@core",
            "./server/core"
          ],
          [
            "@integrations",
            "./server/integrations"
          ],
          [
            "@pages",
            "./server/pages"
          ]
        ],
        "extensions": [
          ".js",
          ".jsx"
        ]
      },
      "node": {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    }
  }
}